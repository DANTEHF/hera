        label(class='col-sm-2 control-label') 收货方地址
        div(class='col-sm-4')
          input(type='text', class='form-control', id='receiving-address', name='receiving-address', autocomplete='off' value=transport['receiving-address'])
      div(class='form-group')
        label(class='col-sm-2 control-label') 承运方单位
        div(class='col-sm-4')
          input(type='text', class='form-control', id='carrier-party', name='carrier-party', autocomplete='off' value=transport['carrier-party'])
