extends layout

block content


  div(class='row')
    div(class='col-md-2')
      div(class='dropdown')
        button(class='btn btn-default btn-block' data-toggle='dropdown' id='current-project')= projects[0].name
          span(class='caret')
        ul(class='dropdown-menu')
          each project in projects
            li
              a(href='#' class='current-project-a')= project.name
    div(class='col-md-10')
      div(class='panel-group', id='project-accordion')
        each project in projects
          div(class='panel panel-default')
            div(class='panel-heading')
              h3(class='panel-title')
                a(data-toggle='collapse' data-parent='#project-accordion' href='#' + project._id)= project.name
                span= ' '
                if project.current['钢管']
                  span= '钢管 ' + project.current['钢管']
                if project.current['扣件']
                  span= '扣件 ' + project.current['扣件']
            div(id=project._id class='panel-collapse collapse out')
              div(class='panel-body')
                h3 调出单
                  a(class='btn btn-default pull-right' href='/project/' + project._id + '/order/create') 创建新的出库单
                ul(class='list-group')
                  each order in project.fromOrders
                    li(class='list-group-item')
                      span= order.toProject
                h3 调入单
                ul(class='list-group')
                  each order in project.toOrders
                    li(class='list-group-item')
                      span= order.fromProject
